<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_info_margin"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_info_image_height"
        android:layout_weight="3"
        fresco:actualImageScaleType="fitXY"
        fresco:backgroundImage="@color/image_bg"
        fresco:fadeDuration="300"
        fresco:failureImage="@drawable/img_no_image"
        fresco:placeholderImage="@color/image_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="1"
            android:textColor="@color/item_title"
            android:textSize="@dimen/item_info_title_text_size" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:minLines="1"
            android:textColor="@color/item_description"
            android:textSize="@dimen/item_info_description_text_size" />

    </LinearLayout>


</LinearLayout>
